@model FBCOMSystemManagement.Models.CPE

@{
    ViewData["Title"] = "Create";
}


<div class="col d-flex justify-content-center">


    <div class="card align-items-center" style="width: 30rem;">
        <h1 class="text-center">Ajouter une CPE</h1>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SNAntenne" class="control-label"></label>
                <input asp-for="SNAntenne" class="form-control" />
                <span asp-validation-for="SNAntenne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SNRouteur" class="control-label"></label>
                <input asp-for="SNRouteur" class="form-control" />
                <span asp-validation-for="SNRouteur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IMEI" class="control-label"></label>
                <input asp-for="IMEI" class="form-control" />
                <span asp-validation-for="IMEI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group text-center">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            <button type="button" class="btn btn-danger">
                <a asp-action="Index" class="text-white">Annuler</a>
            </button>
            </div>

        </form>
        <br />
        <br />
        <br />

</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_Validation");


}
}
