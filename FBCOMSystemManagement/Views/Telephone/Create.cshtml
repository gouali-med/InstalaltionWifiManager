@model FBCOMSystemManagement.Models.Telephone

@{
    ViewData["Title"] = "Create";
}


<div class="col d-flex justify-content-center">


<div class="card align-items-center" style="width: 30rem;">
  <h1 class="text-center">Ajouter une téléphone</h1>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SN" class="control-label"></label>
                <input asp-for="SN" class="form-control" />
                <span asp-validation-for="SN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group text-center">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            <button type="button" class="btn btn-danger">
                <a asp-action="Index" class="text-white">Annuler</a>
            </button>
            </div>

        </form>
        <br />
        <br />
        <br />
   
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_Validation");}
}
